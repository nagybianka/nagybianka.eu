---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <article>
    <h1>
      <%= link_to article.title, article %>
    </h1>
    <%= article.body %>
    <div class='row meta'>
      <div class='slot-0-1-2-3'>
        <hr>
        <time datetime='<%= article.date.strftime('%Y-%m-%d') %>'>
          <i class='ss-icon'>pencil</i>
          <%= article.date.strftime('%e %B %Y') %>
        </time>
      </div>
    </div>
  </article>
<% end %>

<% if paginate %>
  <p class="pagination">
    <% if prev_page %>
      <%= link_to '&larr; Newer posts', prev_page, class: "previous" %>
    <% end %>
    <% if next_page %>
      <%= link_to 'Older posts &rarr;', next_page, class: "next" %>
    <% end %>
  </p>
<% end %>
